<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-gesturelockview" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0">
    <name>CDVLocalGestureLockView</name>
    <js-module name="CDVLocalGestureLockView" src="www/gesturelockview.js">
        <clobbers target="CDVLocalGestureLockView" />
    </js-module>
    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <access origin='*' />
            <feature name="CDVLocalGestureLockView">
                <param name="ios-package" value="CDVLocalGestureLockView" />
                <param name="onload" value="true" />
            </feature>
        </config-file>
        <header-file src="src/ios/CDVLocalGestureLockView.h" />
        <source-file src="src/ios/CDVLocalGestureLockView.m" />
        <podspec>
            <config>
                <source url="https://github.com/CocoaPods/Specs.git"/>
            </config>
            <pods use-frameworks="true">
                <pod name="TQGestureLockView" />
            </pods>
        </podspec>
    </platform>
</plugin>
